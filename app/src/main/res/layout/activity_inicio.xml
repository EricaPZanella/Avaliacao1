<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioActivity">

    <ImageView
        android:id="@+id/imageViewComparador"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:scaleX="0.55"
        android:scaleY="0.55"
        app:srcCompat="@drawable/comparadorprecos"

        />

    <Button
        android:id="@+id/botaoIrComparador"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageViewComparador"
        android:text="@string/comparador"
        android:onClick="comparador"
        />

    <ImageView
        android:id="@+id/imageViewConversor"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:scaleX="0.55"
        android:scaleY="0.55"
        app:srcCompat="@drawable/gkg"
        android:layout_below="@id/botaoIrComparador"
        />

    <Button
        android:id="@+id/botaoIrConversor"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_below="@id/imageViewConversor"
        android:layout_centerHorizontal="true"
        android:text="@string/conversor"
        android:onClick="conversor"
        />

</RelativeLayout>